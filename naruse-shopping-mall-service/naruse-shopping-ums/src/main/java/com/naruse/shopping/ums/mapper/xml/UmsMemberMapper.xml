<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.naruse.shopping.ums.mapper.UmsMemberMapper">
    <select id="countUmsMemberByUsername" parameterType="string" resultType="java.lang.Long">
        SELECT COUNT(1) FROM ums_member WHERE username = #{username}
    </select>

    <select id="selectByUsername" parameterType="string"
            resultType="com.naruse.shopping.ums.entity.UmsMember">
        SELECT username, password FROM ums_member WHERE username = #{username}
    </select>
</mapper>
